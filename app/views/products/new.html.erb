<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <% if @product.errors.any? %>
              <ul>
              <% @product.errors.full_messages.each do |m| %>
                <li><%= m %></li>
              <% end %>
              </ul>
            <% end %>
            
            <%= form_for @product do |f| %>
            <div class="field">
              <%= f.label :title %><br />
              <%= f.text_field :title, required: true, autofocus: true, label: false, placeholder: 'Title',  class: 'input-lg'    %>
            </div>
            
            <div class="field">
              <%= f.label :description %><br />
              <%= f.text_field :description, required: true, autofocus: true, label: false, placeholder: 'Description',  class: 'input-lg'    %>
            </div>
            
            <div class="field">
              <%= f.label :price %><br />
              <%= f.number_field :price, required: true, autofocus: true, label: false, placeholder: 'Price',  class: 'input-lg'    %>
            </div>
            
           <div class="field">
              <%= f.label :discount %><br />
              <%= f.number_field :discount, required: true, autofocus: true, label: false, placeholder: 'Discount',  class: 'input-lg'    %>
            </div>
            
           <div class="field">
              <%= f.label :image %><br />
              <%= f.file_field :image, required: true, autofocus: true, label: false, placeholder: 'Image',  class: 'input-lg'    %>
            </div>
            
            
            
              Category
              <!-- <% categories_array = []%>
              <% Category.all.each do |x| %>
                <% categories_array.push(x.title)%>
              <% end %>
              <%= f.select(:category_id, options_for_select(categories_array)) %> -->
               <%= f.select :category_id, Category.all.collect { |c| [ c.title, c.id ] }%>
              <%= f.submit "Add product" , class: 'btn-lg btn-info btn-block'%>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>