<% if @product.errors.any? %>
  <ul>
  <% @product.errors.full_messages.each do |m| %>
    <li><%= m %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @product do |f| %>
  Title<%= f.text_field :title %>
  Description<%= f.text_field :description %>
  Price<%= f.number_field :price %>
  Discount<%= f.text_field :discount %>
  Image<%= f.file_field :image %>
  <!-- <% categories_array = Category.all.map { |category| [category.title] } %>
  <%= options_for_select(categories_array) %> -->
  <%= f.submit "Add product" %>
<% end %>
