<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
              <h2>Log in</h2>
            </div>
            
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
            <div class="panel-body">
              <div class="field">
                <%= f.label :email %><br />
                <%= f.text_field :email, required: true, autofocus: true, label: false, placeholder: 'Email',  class: 'input-lg'    %>
              </div>
            
              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off",  class: 'input-lg'  %>
              </div>
            
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
            
              <div class="actions">
                <%= f.submit "Log in", class: 'btn-lg btn-info btn-block' %>
              </div>
            </div>
            <% end %>
            
            <%= render "devise/shared/links"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>